<h1><%= @board.title %> </h1>
<p> <%= @board.contents %> </p>

<button type="button" class="btn btn-outline-primary" id="like"><i class="fas fa-thumbs-up"></i> 좋아요 (<span id="like-count">0</span>)</button>
<a href="/" class="btn btn-outline-success"><i class="fas fa-home"></i> 홈으로 </a>

<script>
  $(function(){
    //1. 좋아요 버튼을 클릭하면
    $('#like').on('click', function(){
      if(this.classList.contains('btn-outline-primary')){
        //2.1 좋아요 카운트를 1 증가시킨다.
        $('#like-count').html(parseInt($('#like-count').html())+1);
      }else{
        //2.2 좋아요 카운트를 1 감소시킨다.
        $('#like-count').text(parseInt($('#like-count').html())-1);
      }
      //3. 버튼의 색깔이 좋아요 상태일때와 좋아요를 누른 상태가 아닐때 토글해서 바뀜.
      $(this).toggleClass('btn-primary').toggleClass('btn-outline-primary')

      //4.
    });
  });
</script>
